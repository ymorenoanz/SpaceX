<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="210dp"
        android:layout_height="167dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="6dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txtMission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mission_name"
        app:layout_constraintBottom_toTopOf="@+id/txtRocketName"
        app:layout_constraintTop_toBottomOf="@+id/imgView"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtRocketName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rocket_name"
        app:layout_constraintBottom_toTopOf="@+id/txtLaunchSiteName"
        app:layout_constraintTop_toBottomOf="@+id/txtMission"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtLaunchDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/launch_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLaunchSiteName"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtLaunchSiteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/launch_site_name"
        app:layout_constraintBottom_toTopOf="@+id/txtLaunchDate"
        app:layout_constraintTop_toBottomOf="@+id/txtRocketName"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

